<%= form_for(classroom,  :html => {:class => 'form-horizontal'}) do |f|%>
  <% if classroom.errors.any? %>
    <div id="error_explanation">
      <h2>Não foi possível salvar classroom:</h2>

      <ul>
      <% classroom.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>



<div class="portlet-body form form-horizontal">
    <div class="form-body">
      <div class="row">
        
                        <div class="col-md-6">
                <div class="form-group">
                <%= f.label :student, :class => 'control-label col-md-3' %>
                <div class="col-md-9">
                  <!--%= f.text_field :student,:class => 'form-control' %-->
                  <%= collection_select(:classroom, :student_id, Student.all, :id, :name, {}, {:class => 'form-control'}) %>
                </div>
              </div>
            </div>
                    
            <div class="col-md-6">
                <div class="form-group">
                <%= f.label :course, :class => 'control-label col-md-3' %>
                <div class="col-md-9">
                  <!--%= f.text_field :course,:class => 'form-control' %-->
                  <!--%= collection_select("classroom", "student_id", Student.all, :id, :name, {}, {:class => 'form-control'}) %-->
                  <%= collection_select(:classroom, :course_id, Course.all, :id, :name, {}, {:class => 'form-control'}) %>

                </div>
              </div>
            </div>
                    
          </div>
    </div>
</div>

<div class="form-actions">
  <div class="row text-center">
    <button type="submit" name="commit" class="btn green">
      <i class="fa fa-save"></i> Salvar
    </button>
  </div>
</div>
<script>
</script>

<% end %>