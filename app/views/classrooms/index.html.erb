<p id="notice"><%= notice %></p>

<div class="row margin-top-10">
  <div class="col-md-12 col-sm-12">
    <!-- BEGIN PORTLET-->
    <div class="portlet light ">
      <div class="portlet-title">
        <div class="caption caption-md">
          <i class="icon-bar-chart theme-font hide"></i>
          <span class="caption-subject theme-font bold uppercase">Listagem Classrooms</span>
        </div>
        <div class="actions">
          <%= link_to raw('<i class="fa fa-plus"></i> Novo Classroom'), new_classroom_path, class:"btn blue" %>
        </div>
      </div>
      <div class="portlet-body">
        <table class="table table-striped table-bordered table-hover" id="sample_1">
          <thead>
          <tr>
                            <th>Student</th>
                            <th>Course</th>
                            <th>Entry at</th>
                        <th>Ações</th>
          </tr>
          </thead>

          <tbody>
          <% @classrooms.each do |classroom| %>
          <tr class="odd gradeX">
                            <td><%= classroom.student.name if classroom.student %></td>
                            <td><%= classroom.course.name if classroom.course %></td>
                            <td><%= classroom.entry_at.strftime('%d/%m/%y %H:%M') if classroom.entry_at %></td>
                        <td width="300px">
              <%= link_to raw('<i class="fa fa-search"></i> Ver'), classroom, class:"btn btn-xs green" %>&nbsp;
              <%= link_to raw('<i class="fa fa-edit"></i> Editar'), edit_classroom_path(classroom), class:"btn btn-xs yellow" %>&nbsp;
              <%= link_to raw('<i class="fa fa-trash-o"></i> Excluir'), classroom, method: :delete, data: { confirm: 'Tem certeza que deseja deletar?' }, class:"btn btn-xs red" %>
            </td>
          </tr>
          <% end %>
          </tbody>
        </table>
      </div>
    </div>
    <!-- END PORTLET-->
  </div>
</div>