<p id="notice"><%= notice %></p>

<div class="row margin-top-10">
  <div class="col-md-12 col-sm-12">
    <!-- BEGIN PORTLET-->
    <div class="portlet light ">
      <div class="portlet-title">
        <div class="caption caption-md">
          <i class="icon-bar-chart theme-font hide"></i>
          <span class="caption-subject theme-font bold uppercase">Listagem Courses</span>
        </div>
        <div class="actions">
          <%= link_to raw('<i class="fa fa-plus"></i> Novo Course'), new_course_path, class:"btn blue" %>
        </div>
      </div>
      <div class="portlet-body">
        <table class="table table-striped table-bordered table-hover" id="sample_1">
          <thead>
          <tr>
                            <th>Name</th>
                            <th>Description</th>
                            <th>Status</th>
                        <th>Ações</th>
          </tr>
          </thead>

          <tbody>
          <% @courses.each do |course| %>
          <tr class="odd gradeX">
                            <td><%= course.name %></td>
                            <td><%= course.description %></td>
                            <td><%= course.status %></td>
                        <td width="300px">
              <%= link_to raw('<i class="fa fa-search"></i> Ver'), course, class:"btn btn-xs green" %>&nbsp;
              <%= link_to raw('<i class="fa fa-edit"></i> Editar'), edit_course_path(course), class:"btn btn-xs yellow" %>&nbsp;
              <%= link_to raw('<i class="fa fa-trash-o"></i> Excluir'), course, method: :delete, data: { confirm: 'Tem certeza que deseja deletar?' }, class:"btn btn-xs red" %>
            </td>
          </tr>
          <% end %>
          </tbody>
        </table>
      </div>
    </div>
    <!-- END PORTLET-->
  </div>
</div>