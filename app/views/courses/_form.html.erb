<%= form_for(course,  :html => {:class => 'form-horizontal'}) do |f|%>
  <% if course.errors.any? %>
    <div id="error_explanation">
      <h2>Não foi possível salvar course:</h2>

      <ul>
      <% course.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>



<div class="portlet-body form form-horizontal">
    <div class="form-body">
      <div class="row">
        
                        <div class="col-md-6">
                <div class="form-group">
                <%= f.label :name, :class => 'control-label col-md-3' %>
                <div class="col-md-9">
                  <%= f.text_field :name,:class => 'form-control' %>
                </div>
              </div>
            </div>
                    
                        <div class="col-md-6">
                <div class="form-group">
                <%= f.label :description, :class => 'control-label col-md-3' %>
                <div class="col-md-9">
                  <%= f.text_field :description,:class => 'form-control' %>
                </div>
              </div>
            </div>
                    
                        <div class="col-md-6">
                <div class="form-group">
                <%= f.label :status, :class => 'control-label col-md-3' %>
                <div class="col-md-9">
                  <%= f.text_field :status,:class => 'form-control' %>
                </div>
              </div>
            </div>
                            </div>
    </div>
</div>

<div class="form-actions">
  <div class="row text-center">
    <button type="submit" name="commit" class="btn green">
      <i class="fa fa-save"></i> Salvar
    </button>
  </div>
</div>
<% end %>